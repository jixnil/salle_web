<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/gestion_salle</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456Az</property>

        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>


        <property name="hbm2ddl.auto">update</property>

        <!-- Mappages des entitÃ©s -->
        <mapping class="org.example.gestion_salle.model.Prof"/>
        <mapping class="org.example.gestion_salle.model.Salle"/>
        <mapping class="org.example.gestion_salle.model.Occuper"/>
    </session-factory>
</hibernate-configuration>
